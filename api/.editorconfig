# Configurações adicionais para C#
[*.cs]

# Formatação de espaçamento
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_between_method_declaration_parameter = true
csharp_space_after_method_declaration_name = true

# Configurações de convenções de nomes
# Simplificando para evitar problemas com o dotnet format
dotnet_naming_rule.method_names_must_be_pascal_case.severity = suggestion
dotnet_naming_rule.method_names_must_be_pascal_case.symbols = method_names
dotnet_naming_symbols.method_names = for_all_symbols
dotnet_naming_style.pascal_case.capitalization = pascal_case

# Preferências de uso de var
dotnet_style_prefer_var_when_type_is_apparent = true
dotnet_style_prefer_var_elsewhere = false
end_of_line = lf

# Formatação de comentários
csharp_style_prefer_comment_over_code = true

# Manutenção de quebras de linha
csharp_new_line_before_else = true
csharp_new_line_before_finally = true

# Configurações de quebras de linha em expressões
csharp_new_line_before_open_brace_in_method_declaration = true
csharp_new_line_after_open_brace = true
